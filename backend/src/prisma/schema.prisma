generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MedicalInsitute {
  id            Int      @id @default(autoincrement())
  name          String
  address       String
  contactEmail  String   @unique
  contactNumber String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  doctors Doctor[]
  admin   Admin?
}

model Admin {
  id                Int      @id @default(autoincrement())
  firstName         String
  lastName          String
  email             String   @unique
  phoneNumber       String   @unique
  medicalInsituteId Int      @unique
  password          String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  medicalInsitute MedicalInsitute @relation(fields: [medicalInsituteId], references: [id])
}

model Doctor {
  id                Int      @id @default(autoincrement())
  firstName         String
  lastName          String
  email             String   @unique
  phoneNumber       String   @unique
  specialization    String
  medicalInsituteId Int
  password          String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  medicalInsitute MedicalInsitute @relation(fields: [medicalInsituteId], references: [id])
}
