generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MedicalInstitute {
  id            Int      @id @default(autoincrement())
  name          String
  address       String
  contactEmail  String   @unique
  contactNumber String
  webhookUrl    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  doctors Doctor[]
  admin   Admin?
}

model Admin {
  id                 Int      @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String   @unique
  phoneNumber        String   @unique
  medicalInstituteId Int      @unique
  password           String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  medicalInstitute MedicalInstitute @relation(fields: [medicalInstituteId], references: [id])
}

model Doctor {
  id                 Int      @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String   @unique
  phoneNumber        String   @unique
  specialization     String
  medicalInstituteId Int
  password           String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  medicalInstitute MedicalInstitute @relation(fields: [medicalInstituteId], references: [id])
}
